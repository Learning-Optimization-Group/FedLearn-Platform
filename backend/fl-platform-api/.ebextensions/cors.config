files:
  "/etc/nginx/conf.d/99_cors.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # This configuration instructs Nginx to handle all CORS rules correctly.
      # It will override the faulty AWS defaults.

      # Always add the correct Origin header, based on what the browser sent.
      add_header 'Access-Control-Allow-Origin' "$http_origin" always;

      # Always allow credentials (for the Authorization header).
      add_header 'Access-Control-Allow-Credentials' 'true' always;

      # Always specify the allowed methods.
      add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS, PATCH' always;

      # Always specify the allowed headers.
      add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, Accept, Origin, X-Requested-With' always;

      # For the browser's pre-flight OPTIONS request, respond immediately with 204 No Content.
      # This is fast and prevents the request from ever needing to hit the Java app.
      if ($request_method = 'OPTIONS') {
        return 204;
      }