files:
  "/etc/nginx/conf.d/01_cors.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # This configuration file will be placed on the EC2 instance by Elastic Beanstalk.
      # It instructs the Nginx proxy to handle all CORS rules correctly,
      # overriding the faulty AWS defaults.

      # For the browser's pre-flight OPTIONS request, respond immediately with 204 No Content.
      # This is fast and prevents the request from ever needing to hit the Java app.
      if ($request_method = 'OPTIONS') {
        add_header 'Access-Control-Allow-Origin' "$http_origin" always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS, PATCH' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, Accept, Origin' always;
        add_header 'Access-Control-Max-Age' 1728000;
        add_header 'Content-Type' 'text/plain; charset=utf-8';
        add_header 'Content-Length' 0;
        return 204;
      }

      # For all other requests (GET, POST, etc.), add the CORS headers to the response
      # that comes back from the Spring Boot application.
      add_header 'Access-Control-Allow-Origin' "$http_origin" always;
      add_header 'Access-Control-Allow-Credentials' 'true' always;